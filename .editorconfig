# Provide formatting directives for editors.
#
# This is supported by many of the respectable IDEs, see
# https://editorconfig.org for details.

root = true

[*]
indent_style             = space
indent_size              = 2
insert_final_newline     = true
trim_trailing_whitespace = true
end_of_line              = lf
charset                  = utf-8

[*.py]
indent_size              = 4
# ``black`` will handle the actual line lengths
max_line_length          = 119

[Makefile]
indent_style             = tab
